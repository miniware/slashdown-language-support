{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SlashDown",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#tags"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#markdown"
    },
    {
      "include": "#codeFence"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.slashdown",
          "match": "^\\s*(//.*)"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "entity.name.tag.slashdown",
          "match": "^\\s*(/[a-zA-Z0-9-]*)",
          "captures": {
            "1": {
              "name": "entity.name.tag.slashdown"
            }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.class.slashdown",
          "match": "\\.[a-zA-Z0-9-]+"
        },
        {
          "name": "entity.other.attribute-name.id.slashdown",
          "match": "#[a-zA-Z0-9-]+"
        },
        {
          "match": "^\\s*([a-zA-Z0-9-]+)\\s*(=)\\s*(['\"].*?['\"])",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.slashdown"
            },
            "2": {
              "name": "punctuation.separator.key-value.slashdown"
            },
            "3": {
              "name": "string.quoted.double.slashdown"
            }
          }
        }
      ]
    },
    "markdown": {
      "patterns": [
        {
          "name": "markup.heading.slashdown",
          "match": "^\\s*(#{1,6}\\s+.+)$"
        },
        {
          "name": "markup.italic.slashdown",
          "match": "\\*[^*]+\\*"
        },
        {
          "name": "markup.bold.slashdown",
          "match": "\\*\\*[^*]+\\*\\*"
        },
        {
          "name": "markup.inline.raw.slashdown",
          "match": "`[^`]+`"
        }
      ]
    },
    "codeFence": {
      "name": "markup.fenced_code.block.slashdown",
      "begin": "^\\s*```\\s*([a-zA-Z0-9-]+)?$",
      "end": "^\\s*```\\s*$",
      "beginCaptures": {
        "1": {
          "name": "entity.name.type.fenced_code.block.language.slashdown"
        }
      },
      "patterns": [
        {
          "include": "source.slashdown"
        }
      ]
    }
  },
  "scopeName": "source.slashdown"
}