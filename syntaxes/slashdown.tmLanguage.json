{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SlashDown",
  "patterns": [
    { "include": "#comments" },
    { "include": "#tags" },
    { "include": "#markdown" },
    { "include": "#codeFence" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.slashdown",
          "match": "^\\s*(//.*)"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "match": "^(\\s*)(/[a-zA-Z0-9-]*)(?:([.#][a-zA-Z0-9-]+)*)*((?:\\s+(?:[a-zA-Z0-9-]+(?:=(?:['\"][^'\"]*['\"]|\\S+))?|[.#][a-zA-Z0-9-]+))*)\\s*$",
          "captures": {
            "2": { "name": "entity.name.tag.slashdown" },
            "3": {
              "patterns": [
                { "match": "([.#])([a-zA-Z0-9-]+)", "captures": {
                  "1": { "name": "punctuation.separator.slashdown" },
                  "2": { "name": "entity.other.attribute-name.class.slashdown" }
                }}
              ]
            },
            "4": {
              "patterns": [
                {
                  "match": "\\s+([a-zA-Z0-9-]+)(?:=(['\"][^'\"]*['\"]|\\S+))?",
                  "captures": {
                    "1": { "name": "entity.other.attribute-name.slashdown" },
                    "2": { "name": "string.quoted.double.slashdown" }
                  }
                },
                { "match": "\\s+([.#][a-zA-Z0-9-]+)", "name": "entity.other.attribute-name.slashdown" }
              ]
            }
          }
        },
        {
          "match": "^(\\s+)([a-zA-Z0-9-]+)(?:=(['\"][^'\"]*['\"]|\\S+))?\\s*$",
          "captures": {
            "2": { "name": "entity.other.attribute-name.slashdown" },
            "3": { "name": "string.quoted.double.slashdown" }
          }
        }
      ]
    },
    "markdown": {
      "patterns": [
        {
          "name": "markup.heading.slashdown",
          "match": "^\\s*(#{1,6}\\s+.+)$"
        },
        {
          "name": "markup.italic.slashdown",
          "match": "\\*[^*]+\\*"
        },
        {
          "name": "markup.bold.slashdown",
          "match": "\\*\\*[^*]+\\*\\*"
        },
        {
          "name": "markup.inline.raw.slashdown",
          "match": "`[^`]+`"
        }
      ]
    },
    "codeFence": {
      "name": "markup.fenced_code.block.slashdown",
      "begin": "^\\s*```\\s*([a-zA-Z0-9-]+)?$",
      "end": "^\\s*```\\s*$",
      "beginCaptures": {
        "1": { "name": "entity.name.type.fenced_code.block.language.slashdown" }
      },
      "patterns": [
        {
          "begin": "(?<=```)(([a-zA-Z0-9-]+))",
          "while": "(^|\\G)(?!\\s*```\\s*$)",
          "patterns": [
            {
              "include": "source.${2}"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.slashdown"
}