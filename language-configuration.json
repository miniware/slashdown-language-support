{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "*", "close": "*" }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["*", "*"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*/$",
    "decreaseIndentPattern": "^\\s*/$"
  },
  "wordPattern": "([\\w\\.#-]+)"
}
